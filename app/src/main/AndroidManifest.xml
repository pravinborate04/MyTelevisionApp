        <activity android:name=".movies.FavoriteMoviesActivity" />
        <activity android:name=".tvseries.AllTvSeriesActivity" />
        <activity android:name=".tvseries.TvSearchActivity" />
        <activity android:name=".tvseries.TvDetailActivity" />
